               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">COM_UGC_NEW_ID_ASC</option><option value="a.id DESC">COM_UGC_NEW_ID_DESC</option><option value="a.state ASC">COM_UGC_NEW_STATE_ASC</option><option value="a.state DESC">COM_UGC_NEW_STATE_DESC</option><option value="a.ordering ASC">COM_UGC_NEW_ORDERING_ASC</option><option value="a.ordering DESC">COM_UGC_NEW_ORDERING_DESC</option><option value="a.created_at ASC">COM_UGC_NEW_CREATED_AT_ASC</option><option value="a.created_at DESC">COM_UGC_NEW_CREATED_AT_DESC</option><option value="a.trip_code ASC">COM_UGC_NEW_TRIP_CODE_ASC</option><option value="a.trip_code DESC">COM_UGC_NEW_TRIP_CODE_DESC</option><option value="a.rating ASC">COM_UGC_NEW_RATING_ASC</option><option value="a.rating DESC">COM_UGC_NEW_RATING_DESC</option><option value="a.review_title ASC">COM_UGC_NEW_REVIEW_TITLE_ASC</option><option value="a.review_title DESC">COM_UGC_NEW_REVIEW_TITLE_DESC</option><option value="a.user_name ASC">COM_UGC_NEW_USER_NAME_ASC</option><option value="a.user_name DESC">COM_UGC_NEW_USER_NAME_DESC</option>

        </field>

       <field name="limit"
               type="limitbox"
               label="COM_UGC_NEW_LIST_LIMIT"
               description="COM_UGC_NEW_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>