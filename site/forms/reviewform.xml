<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Ugc\Component\Ugc_new\Site\Field">
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>
    <field name="created_at" type="timecreated" label="COM_UGC_NEW_FORM_LBL_REVIEW_CREATED_AT" description="COM_UGC_NEW_FORM_DESC_REVIEW_CREATED_AT" hint="COM_UGC_NEW_FORM_LBL_REVIEW_CREATED_AT"/>
    <field name="trip_code" type="text" required="true" label="COM_UGC_NEW_FORM_LBL_REVIEW_TRIP_CODE" description="COM_UGC_NEW_FORM_DESC_REVIEW_TRIP_CODE" hint="COM_UGC_NEW_FORM_LBL_REVIEW_TRIP_CODE"/>
    <field name="rating" filter="safehtml" min="0" max="5" step="0.5" type="number" required="true" label="COM_UGC_NEW_FORM_LBL_REVIEW_RATING" description="COM_UGC_NEW_FORM_DESC_REVIEW_RATING" hint="COM_UGC_NEW_FORM_LBL_REVIEW_RATING"/>
    <field name="review_title" filter="safehtml" type="text" required="true" label="COM_UGC_NEW_FORM_LBL_REVIEW_REVIEW_TITLE" description="COM_UGC_NEW_FORM_DESC_REVIEW_REVIEW_TITLE" hint="COM_UGC_NEW_FORM_LBL_REVIEW_REVIEW_TITLE"/>
    <field name="review_content" filter="safehtml" type="textarea" required="true" label="COM_UGC_NEW_FORM_LBL_REVIEW_REVIEW_CONTENT" description="COM_UGC_NEW_FORM_DESC_REVIEW_REVIEW_CONTENT" hint="COM_UGC_NEW_FORM_LBL_REVIEW_REVIEW_CONTENT"/>
    <field name="user_id" filter="safehtml" type="text" label="COM_UGC_NEW_FORM_LBL_REVIEW_USER_ID" description="COM_UGC_NEW_FORM_DESC_REVIEW_USER_ID" hint="COM_UGC_NEW_FORM_LBL_REVIEW_USER_ID"/>
    <field name="user_name" filter="safehtml" type="text" required="true" label="COM_UGC_NEW_FORM_LBL_REVIEW_USER_NAME" description="COM_UGC_NEW_FORM_DESC_REVIEW_USER_NAME" hint="COM_UGC_NEW_FORM_LBL_REVIEW_USER_NAME"/>
    <field name="user_location" filter="safehtml" type="text" required="true" label="COM_UGC_NEW_FORM_LBL_REVIEW_USER_LOCATION" description="COM_UGC_NEW_FORM_DESC_REVIEW_USER_LOCATION" hint="COM_UGC_NEW_FORM_LBL_REVIEW_USER_LOCATION"/>
    <field name="country" filter="safehtml" type="text" required="true" label="COM_UGC_NEW_FORM_LBL_REVIEW_COUNTRY" description="COM_UGC_NEW_FORM_DESC_REVIEW_COUNTRY" hint="COM_UGC_NEW_FORM_LBL_REVIEW_COUNTRY"/>
    <field name="tags" mode="ajax" multiple="true" custom="allow" type="tag" label="JTAG" description="JTAG_FIELD_SELECT_DESC" hint="COM_UGC_NEW_FORM_LBL_REVIEW_TAGS"/>
    <field name="videos" filter="safehtml" type="text" label="COM_UGC_NEW_FORM_LBL_REVIEW_VIDEOS" description="COM_UGC_NEW_FORM_DESC_REVIEW_VIDEOS" hint="COM_UGC_NEW_FORM_LBL_REVIEW_VIDEOS"/>
    <field name="review_reply" filter="safehtml" type="textarea" label="COM_UGC_NEW_FORM_LBL_REVIEW_REVIEW_REPLY" description="COM_UGC_NEW_FORM_DESC_REVIEW_REVIEW_REPLY" hint="COM_UGC_NEW_FORM_LBL_REVIEW_REVIEW_REPLY"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
