               type="status"
               label="COM_UGC_NEW_FILTER_STATE"
               description="COM_UGC_NEW_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
